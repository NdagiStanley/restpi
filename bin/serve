#!/usr/bin/env python

from iotcontrol import IOTServer
import argparse

if __name__ == '__main__':
    # Setup default arguments for the command line interface
    parser = argparse.ArgumentParser(description='Start IOTControl Server')
    parser.add_argument('-p', '--port', help='Specify the port for the server being created. Accessible locally', default=8080)
    parser.add_argument('-c', '--config', help='Specify configuration information for the server being initialized')

    args = parser.parse_args()

    server = IOTServer(__name__, args.config)

    server.app.run(port=args.port)
